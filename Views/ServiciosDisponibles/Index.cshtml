@model List<ServiciosDisponibles>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary" >Lista del Class</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Class" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Crear Nueva Class
            </a>
        </div>
    </div>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderBy(u => u.NombreSer) )
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.NombreSer</td>
                    <td>
                        <a asp-controller="Class" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">
                            <i class="bi bi-pencil"></i> Editar
                        </a>
                        <a asp-controller="Class" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i> Eliminar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
