<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LavanderiaVJWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" type="text/css" href="css/bootstrap-responsive.css" />
    <link rel="icon" type="image/png" href="imagenes/ico/burbujas01.png" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                
                <a class="navbar-brand" href="/Home/Index">
                    <img height="80px" width="auto" src="~/images/LogoBurbujas1.png" />
                </a>
                

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li>
                            <a class="nav-link" asp-controller="Servicio" asp-action="serviciosPendientes">SERVICIOS PENDIENTES</a>
                        </li>


                        <li class="nav-item dropdown">

                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                MANTENIMIENTO DE SERVICIOS
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item text-dark" asp-controller="Servicio" asp-action="Registro">Registrar Servicio y Prendas de Lavandería</a>
                                </li>
                                <li>
                                    <a class="dropdown-item text-dark" asp-controller="Servicio" asp-action="servicios">Listar Servicios</a>
                                </li>
                                
                                <li>
                                    <a class="dropdown-item text-dark" asp-controller="Servicio" asp-action="serviciosRealizados">Reportes de servicios</a>
                                </li>
                                <li>
                                    <a class="dropdown-item text-dark" asp-controller="Servicio" asp-action="ModificarEstadoServicio">Actualizar Estado de Servicio</a>
                                </li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                ATENCIÓN DE CLIENTES
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item text-dark" asp-controller="Clientes" asp-action="Create">Registrar Cliente</a>
                                </li>
                                <li>
                                    <a class="dropdown-item text-dark" asp-controller="Clientes" asp-action="Index">Listar Clientes registrados</a>
                                </li>
                                <li>
                                    <a class="dropdown-item text-dark" asp-controller="Servicio" asp-action="VerEstadoServicio">Visualizar detalle y estado de servicios</a>
                                </li>
                            </ul>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Cuenta" asp-action="Registro">CREAR CUENTA</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Cuenta" asp-action="Acceso">INICIAR SESIÓN</a>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="ServiciosDisponibles" asp-action="Index">SERVICIOS QUE SE BRINDA (ADMIN)</a>
                        </li>
                    </ul>
                    
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - LavanderiaVJWeb - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
